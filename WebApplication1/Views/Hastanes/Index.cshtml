@model IEnumerable<WebApplication1.Models.Hastane>

@{
    ViewBag.Title = "Index";
}

<form class="btn-group">
    <button style="width:217px" id="btn" class="btn btn-secondary" formaction="~/Sehirs/Index">Şehirler</button>
    <button style="width:217px" id="btn" class="btn btn-secondary" formaction="~/Ilces/Index">İlçeler</button>
    <button style="width:217px" id="btn" class="btn btn-secondary" formaction="~/Hastanes/Index">Hastaneler</button>
    <button style="width:217px" id="btn" class="btn btn-secondary" formaction="~/Brans/Index">Branşlar</button>
    <button style="width:217px" id="btn" class="btn btn-secondary" formaction="~/Doktors/Index">Doktorlar</button>
    <button style="width:217px" id="btn" class="btn btn-secondary" formaction="~/Giris/Index">Çıkış</button>
</form>
<br />
<br />

<p>
    @Html.ActionLink("Yeni Hastane Ekle", "Create", null, new { @id = "createlink" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ilce.IlceAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HastaneAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ilce.IlceAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HastaneAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit",null, new { id = item.HastaneID }, new { @id = "guncellelink" }) |
                @Html.ActionLink("Detaylar", "Details",null, new { id = item.HastaneID }, new { @id = "detaylink" }) |
                @Html.ActionLink("Sil", "Delete",null, new { id = item.HastaneID }, new { @id = "sillink" })
            </td>
        </tr>
    }

</table>
